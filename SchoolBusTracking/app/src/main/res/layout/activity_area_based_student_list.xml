<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.cgs.schoolbustracking.activities.AreaBasedStudentListActivity">
    
    <include
            android:id="@+id/buttons_override"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar">
    </include>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/studentlist_busstandname_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saidapet bus stand"
        style="@style/TextViewLargeStyle"
        android:padding="@dimen/header_route_padding"/>

</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/student_list_recyclerview"
        android:layout_width="match_parent"
        
        android:layout_height="wrap_content"/>

</LinearLayout>
