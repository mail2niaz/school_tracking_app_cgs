<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>j
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>


        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#4285F6</item>
    </style>

    <style name="AppCompatCaptureTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- .........................TEXT_VIEW............................. -->
    <style name="TextViewStyle"></style>

    <style name="TextViewSmallStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/txtSizeSmall</item>
    </style>
    <style name="TextViewSmall2Style" parent="TextViewStyle">

    </style>

    <style name="TextViewNormalStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/txtSizeNormal</item>
    </style>

    <style name="TextViewMediumStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/txtSizeMedium</item>
    </style>

    <style name="TextViewLargeStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/txtSizeLarge</item>
    </style>
    <style name="TextViewXLargeStyle" parent="TextViewStyle">
    </style>
    <!-- .........................TEXT_VIEW............................. -->


    <!-- .........................BUTTON............................. -->
    <style name="ButtonStyle">
        <item name="android:background">@color/button_bg_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    <!-- .........................BUTTON............................. -->



    <style name="ToolbarTitle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="actionMenuTextColor">@color/text_color</item>
    </style>

    <style name="ToolbarTitle9" parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@color/text_color</item>
        <item name="android:colorBackground">@color/text_col</item>
    </style>


    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#03A9F4</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    //------------fab
    <style name="menu_labels_style">
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
